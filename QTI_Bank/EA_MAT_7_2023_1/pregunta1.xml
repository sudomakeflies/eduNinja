            <prompt>Selecciona una respuesta:</prompt>
            <simpleChoice is_latex="False" identifier="ChoiceA">10 juegos.</simpleChoice>
            <simpleChoice is_latex="False" identifier="ChoiceB">25 juegos.</simpleChoice>
            <simpleChoice is_latex="False" identifier="ChoiceC">30 juegos.</simpleChoice>
            <simpleChoice is_latex="False" identifier="ChoiceD">40 juegos.</simpleChoice>
        </choiceInteraction>
        <qti:formatLatex xmlns:qti="http://www.imsglobal.org/xsd/imsqti_v2p1">False</qti:formatLatex>
