            <simpleChoice is_latex="True" identifier="ChoiceB">$192\, cm^{3}$</simpleChoice>
            <simpleChoice is_latex="True" identifier="ChoiceC">$156\, cm^{3}$</simpleChoice>
            <simpleChoice is_latex="True" identifier="ChoiceD">$102\, cm^{3}$</simpleChoice>
        </choiceInteraction>
        <qti:formatLatex xmlns:qti="http://www.imsglobal.org/xsd/imsqti_v2p1">False</qti:formatLatex>
